<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title><%= info.title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="../../css/teacher/materialList.css">
</head>

<body>
    <% include searchHeader %>

    <main class="adicionar-material">
        <section class="line">
            <a href="/teacher/question/create"> <img class="img-cadastrar" src="../../img/img-guia-estudo/more.png" alt="">
            </a>
        </section>

        <section class="line">
            <h2 class="center">Minhas Quest천es</h2>
            <% if(myQuestions.length == 0){ %>
                <p>Nenhuma quest찾o cadastrada ou encontrada.</p>
            <% } %>
            <div class="lista">
                <% myQuestions.forEach( element => { %>
                <div class="img-configuration">
                        <a href="/teacher/question/delete/<%= element.id %>"><img class="img-delete" src="../../img/img-menu/delete.png"  alt=""> </a>
                    <a href="/teacher/question/view/<%= element.id %>"> <img class="img-subject" src="../../img/img-question/question.png" alt=""> </a>
                    <h3><%= element.name %></h3>
                    <span class="span-nome"><%= element.author %></span>
                </div>
                <% }); %>
            </div>
        </section>

        <section class="">
            <h2 class="center">Todas as Quest천es</h2>
            <% if(questions.length == 0){ %>
                <p>Nenhuma quest찾o cadastrada ou encontrada.</p>
            <% } %>
            <div class="lista">
                <% questions.forEach( element => { %>
                <div class="img-configuration">
                    <a href="/teacher/question/view/<%= element.id %>"> <img class="img-subject" src="../../img/img-question/question.png" alt=""> </a>
                    <h3><%= element.name %></h3>
                    <span class="span-nome"><%= element.author %></span>
                </div>
                <% }); %>
        </section>
    </main>
</body>

</html>