<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title><%= info.title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="../../css/teacher/materialList.css">
</head>

<body>
    <% include searchHeader %>

    <%
    //Verificar o tipo de imagem
    function getImage(subject) {
        switch (subject) {
            case "Operações Básicas":
                return "more";
            case "Fração":
                return "fraction";
            case "Álgebra":
                return "algebra"
            case "Análise Combinatória":
                return "division";
            case "Geometria":
                return "area";
            case "Porcentagem":
                return "percent";
            default:
                return "other";
        }
    }
    %>

    <main class="adicionar-material">
        <section class="line">
            <a href="/teacher/study-guide/create"> <img class="img-cadastrar" src="../../img/img-guia-estudo/more.png" alt="">
            </a>
        </section>

        <section class="line">
            <h2 class="center">Meus Guias</h2>
            <% if(myGuides.length == 0){ %>
                <p>Nenhum guia cadastrado ou encontrado.</p>
            <% } %>
            <div class="lista">
                <% myGuides.forEach( element => { %>
                    <div class="img-configuration">
                        <%
                        image = getImage(element.subject);
                        %>
                            <a href="/teacher/study-guide/delete/<%= element.id %>"><img class="img-delete" src="../../img/img-menu/delete.png"  alt=""> </a>
                        <a href="/teacher/study-guide/update/<%= element.id %>"> <img class="img-subject" src="../../img/img-conteudo/<%= image %>.png" alt=""> </a>
                        <h3><%= element.name %></h3>
                        <span class="span-nome"><%= element.author %></span>
                    </div>
                <% }); %>
            </div>

        </section>

        <section class="">
            <h2 class="center">Todos os Guias</h2>
            <% if(guides.length == 0){ %>
                <p>Nenhum guia cadastrado ou encontrado.</p>
            <% } %>
            <div class="lista">
                <% guides.forEach( element => { %>
                    <div class="img-configuration">
                        <%
                        image = getImage(element.subject);
                        %>
                        <a href="/teacher/study-guide/view/<%= element.id %>"> <img class="img-subject" src="../../img/img-conteudo/<%= image %>.png" alt=""> </a>
                        <h3><%= element.name %></h3>
                        <span class="span-nome"><%= element.author %></span>
                    </div>
                <% }); %>
            </div>

        </section>
    </main>
</body>

</html>