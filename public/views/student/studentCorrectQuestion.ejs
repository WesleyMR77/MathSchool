<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title><%= info.title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="../../../css/student/studentQuestionID.css">
</head>

<body>
    <% include headerID %>

    <section class="regular-area">
        <%
            var text;
            var textColor;
            if(correction){
                text = "Resposta correta!";
                textColor = "right";
            }else{
                text = "Resposta errada!";
                textColor = "wrong";
            }
        %>
        <h1 class="correction <%= textColor %>"><%= text %></h1>

        <div class="button-end">
            <% 
                var index;
                for(let i = 0; i < questionnaire.questions.length; i++){
                    if(questionnaire.questions[i].id == question.id ){
                        index = i;
                        break;
                    }
                };
            %>
            <div>   
                <% index = index + 1; %>
                <% if(index != questionnaire.questions.length){ %>
                    <a href="/student/questionnaire/<%= questionnaire.id %>/<%= index %>" class="button-avancar">Avan√ßar</a>
                <% } else {%>
                    <a href="/student/questionnaire" class="button-avancar">Finalizar</a>
                <% }; %>
            </div>
            <div>
                <% if(correction){ %>
                <% } else { %>
                <% index = index - 1;%>
                    <a href="/student/questionnaire/<%= questionnaire.id %>/<%= index %>" class="button-corrigir">Tentar denovo</a>
                <% }; %>    
            </div>
        </div>

    </section>
</body>

</html>