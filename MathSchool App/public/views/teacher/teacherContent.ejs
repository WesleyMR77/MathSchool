<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Conteudo</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="../../css/teacher/teacherContent.css">
</head>

<body>
    <% include header %>

    <main class="adicionar-guia">
        <section class="line">
            <a href="/teacher/content/create"> <img class="img-cadastrar" src="../../img/img-guia-estudo/more.png" alt="">
            </a>
        </section>

        <section class="line">
            <%
            var myContentsTitle = "Meus Conteúdos";
            if( myContents.length == 0){
                myContentsTitle = "Voce ainda nao cadastrou nenhum conteúdo"
            };
            %>
            <h2 class="center"><%= myContentsTitle %></h2>
            <div class="guias">
                <% myContents.forEach( element => { %>
                <div class="img-configuration">
                        <a href="/teacher/content/delete/<%= element.id %>">  <img class="img-delete" src="../../img/img-menu/delete.png"  alt=""> </a>
                    <a href="/teacher/content/<%= element.id %>"> <img src="../../img/img-guia-estudo/more.png" alt=""> </a>
                    <h3><%= element.name %></h3>
                    <span class="span-nome"><%= element.author %></span>
                </div>
                <% }); %>
            </div>

        </section>

        <section>
            <h2 class="center">Todos os Conteúdos</h2>
            <div class="guias">
                <% contents.forEach( element => { %>
                <div class="img-configuration">
                    <a href="/teacher/content/<%= element.id %>"> <img src="../../img/img-guia-estudo/more.png" alt=""> </a>
                    <h3><%= element.name %></h3>
                    <span class="span-nome"><%= element.author %></span>
                </div>
                <% }); %>
            </div>

        </section>
    </main>
</body>

</html>